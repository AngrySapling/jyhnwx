/* pages/verification-code.wxss */
.verification{
  display: flex;
  align-content: center;
  justify-content: center;
  flex-direction: column;
  font-size: 30rpx;
}
.login-font{
  display: flex;
  font-size: 50rpx;
  margin-top:100rpx;
  margin-bottom: 40rpx;
  font-weight: 560;
  align-content: center;
  justify-content: center;
}
.account{
  margin-left:20rpx;
  display: flex;
  flex-direction: row;
  font-size: 40rpx;
  border-bottom: 1px solid #f0f0f0;
  margin: 30rpx 20rpx;
  padding-bottom: 20rpx;
  justify-content: center;
  align-content: center;
}


.content{
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin-top: 200rpx;
  width: 80%;
  margin-left: 10%;
}
.iptbox{
  width: 80rpx;
  height: 80rpx;
  border:5rpx solid rgb(212, 212, 212);
  border-radius: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
}
.ipt{
  width: 0;
  height: 0;
}
.btn-area{
  width: 60%;
  background-color: orange;
  color:white;
}
.description-text{
  display: flex;
  align-content: center;
  justify-content: center;
}

