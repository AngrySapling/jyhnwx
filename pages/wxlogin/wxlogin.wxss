/* pages/wechatLogin/wechatLogin.wxss */
.close{
  margin: 20rpx auto 70rpx 5%;
  font-size: 40rpx;
}


.first{
  display: flex;
  flex-direction: row;
  margin-left: 5%;
  align-items: center; 
}

.logo{
  width: 200rpx;
  height: 60rpx;
}

.bigsize{
  font-size: 55rpx;
  margin: 30rpx 5% 50rpx 5%;
  font-weight: bold;
}
.feihua{
  font-size: 30rpx;
  color: #b8b5b5;
  margin-left: 5%;
  margin-bottom: 30rpx;
}

.limit {
  width: 100%;
  height: 1.2px;
  background-color: #f1eded;
  vertical-align: middle;
  position: relative;
  top: 0rpx;
  margin: 25rpx auto;
  z-index: -99;
} 

.wx-view{
  font-size: 38rpx;
}


.wxlogin-view{
  width: 300rpx;
}

.intro {
  margin: 30px;
  text-align: center;
}

.avatarAndName{
  display: flex;
  flex-direction: row;
}

.avatar{
  width: 100rpx;
  height: 100rpx;
  margin-right: 20rpx;
  margin-left: 7%;
}

.name-avatar{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 70%;
  align-items: center; 
}

.name-view{
  display: flex;
  flex-direction: column;
  
}

.name-information{
  font-size: 28rpx;
  color: #b8b5b5;
  margin-top: 10rpx;
}

.agreeOrnot{
  width: 50%;
  margin-left: 25%;
  margin-top: 100rpx;
}

.agree{
  margin-bottom: 30rpx;
  margin-top: 50rpx;
}